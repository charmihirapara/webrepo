{% include 'header.html.twig' %}
<body class="">
	<div class="sidebar">
	  <a href="#home">Dashboard</a>
	  <a href="#datatable">Data Tables</a>
	  <a href="#form">User Form</a>
      <a href="#file">Bulk Email Verification</a>
      <a href="#debug">Debugging JS-App</a>
	</div>
	{# Dashboard #}
	<div class=" content" id="home">
		<h1>Dashboard</h1><hr>
	</div>
    {% block form_block %}
        <div class=" content form_content" id="form">
            <form action="action_form.php" style="max-width:500px;margin:auto" method="post" enctype="multipart/form-data">
              <h2>Register Form</h2>
              <div class="input-container">
                <i class="fa fa-user icon"></i>
                <input class="input-field" type="text" placeholder="Username" name="name" >
              </div>

              <div class="input-container">
                <i class="fa fa-envelope icon"></i>
                 <input id="email" type="email" tabindex="3" name="email" data-type="email" required="" placeholder="Please enter address">
              </div>
              
              <div class="input-container">
                <i class="fa fa-key icon"></i>
                <input class="input-field" type="password" placeholder="Password" name="password" >
              </div>
              <button type="submit" class="btn" name="submit">Register</button>
            </form>
        </div>
    {% endblock %}

    <div class="content" id="file"> 
        <form action="action_form.php" style="max-width:500px;margin:auto" enctype="multipart/form-data" method="post">
            <h2>Bulk Email Verification</h2>              
                <div class="input-container">
                    <i class="fa fa-file icon"></i>
                    <input class="input-field" type="file" name="file" required>
                </div>
                <button type="submit" class="btn" name="file_submit">Submit</button>
        </form> 
    </div>
    
    <div class="content" id="debug"> 
        <h1>Debug JS-App</h1><hr>
        <div class=" content form_content" style="max-width:500px;margin:auto" id="form">
            
              <div class="input-container">
                <label>Enter First Value</label>
                <input class="input-field" type="text" placeholder="First Value" name="first" id="first">
              </div> 
              <div class="input-container">
                <label>Enter Second Value</label>
                <input class="input-field" type="text" placeholder="Second Value" name="second" id="second">
              </div>
              <label id="labelans"></label>
              <button type="submit" class="btn" onclick="updateLabel()">Sum</button>
        </div>        
    </div>

	<div class="content" id="datatable">
	  <h2>Category</h2>            
	  <table class="table table-hover">
	    <thead>
			<tr>
				<th>No.</th>
				<th>Name</th>
				<th>Order No.</th>
			</tr>
		</thead>
	    <tbody>
	    	{% set co = 1 %}
			{% for i in cdata %}
			<tr>
				<td>{{ co }}</td>
				<td>{{ i.name }}</td>
				<td>{{ i.order_no }}</td>
				{% set co = co + 1 %}
			</tr>	
			{% endfor %}
		</tbody>
	  </table>
		<hr>
			  <h2>User</h2>            
			  <table class="table table-hover">
			    <thead>
					<tr>
						<th>No.</th>
						<th>Name</th>
						<th>Email</th>
						<th>Created At</th>
						<th>Updated At</th>
					</tr>
				</thead>
			    <tbody>
			    	{% set co = 1 %}
					{% for i in udata %}
					<tr>
						<td>{{ co }}</td>
						<td>{{ i.name }}</td>
						<td>{{ i.email }}</td>
						<td>{{ i.created_at }}</td>
						<td>{{ i.updated_at }}</td>
						{% set co = co + 1 %}
					</tr>	
					{% endfor %}
				</tbody>
			  </table>

		<hr>
			  <h2>Location</h2>            
			  <table class="table table-hover">
			    <thead>
					<tr>
						<th>No.</th>
						<th>Name</th>
						<th>City</th>
					</tr>
				</thead>
			    <tbody>
			    	{% set co = 1 %}
					{% for i in ldata %}
					<tr>
						<td>{{ co }}</td>
						<td>{{ i.pname }}</td>
						<td>{{ i.name }}</td>
						{% set co = co + 1 %}
					</tr>	
					{% endfor %}
				</tbody>
			  </table>

		<hr>
	  <h2>Product</h2>            
	  <table class="table table-hover">
	    <thead>
			<tr>
				<th>No.</th>
				<th>Name</th>
				<th>Location</th>
				<th>Category</th>
				<th>Product</th>
				<th>Status</th>
				<th>Created At</th>
				<th>Updated At</th>
			</tr>
		</thead>
	    <tbody>
	    	{% set co = 1 %}
			{% for i in pdata %}
			<tr>
				<td>{{ co }}</td>
				<td>{{ i.uname }}</td>
				<td>{{ i.lname }}</td>
				<td>{{ i.cname }}</td>
				<td>{{ i.product_name }} ({{ i.price }}/-)</td>
				<td>{% if i.status == 'A' %} Active {% endif %} 
					{% if i.status == 'T' %} Terminate {% endif %} 
					{% if i.status == 'P' %} Pending {% endif %} 
				</td>
				<td>{{ i.created_at }}</td>
				<td>{{ i.updated_at }}</td>
				{% set co = co + 1 %}
			</tr>	
			{% endfor %}
		</tbody>
	  </table>
	</div>	

<script>
