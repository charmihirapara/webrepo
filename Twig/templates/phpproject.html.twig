    function updateLabel()
    {
    console.log("Yes");
    var addend1 = parseInt($("#first").val());
    console.log('addend1:', addend1);
    var addend2 = parseInt($("#second").val());
    console.log('addend2:', addend2);
    var sum = addend1 + addend2;
    console.log('sum:', sum);
    $("#labelans").text(sum);
    }
</script>



</body>
</html>